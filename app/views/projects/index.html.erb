<div class="container">
  <div class="new-project">
    <%= link_to 'New project', new_project_path, class: "btn btn-lg btn-success" %>
  </div>
  <h4 class='project-cat'>Pending Projects</h4>
  <div class="row">
    <% result_cours = [] %>
    <% @projects.each do |project| %>
      <% if project.start_date <= Date.today && project.end_date >= Date.today %>
        <div class="col-xs-12 col-md-4">
          <div class="card">
            <div class="card-main" style="background-image: linear-gradient(rgba(0,0,0,0.1) 50%, rgba(0,0,0,0.1) 50%), url(<%= project.client.logo %>);">
              <h6><%= project.title %></h6>
              <%= link_to "", project_path(project), class: 'card-link' %>
              <% result_cours << project %>
            </div>
            <div class="card-footer">
                <div id='card-dates'><div><%= "#{project.start_date.strftime('%d/%m/%y')} to #{project.end_date.strftime('%d/%m/%y')}" %></div>
                </div>
                <div><i class="fas fa-user"></i><%= " #{project.participant_number}" %></div>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
      <% if result_cours.empty? %>
        <div class="col-xs-12 col-md-4">
          <div class="card">
            <div class="card-main">
              <%= "Empty" %>
            </div>
            <div class="card-footer"></div>
          </div>
        </div>
      <% end %>
  </div>
  <h4 class='project-cat'>Coming Projects</h4>
  <div class="row">
    <% result_fut = [] %>
    <% @projects.each do |project| %>
      <% if project.start_date > Date.today %>
        <div class="col-xs-12 col-md-4">
          <div class="card">
            <div class="card-main" style="background-image: linear-gradient(rgba(0,0,0,0.1) 50%, rgba(0,0,0,0.1) 50%), url(<%= project.client.logo %>);">
              <h6><%= project.title %></h6>
              <%= link_to "", project_path(project), class: 'card-link' %>
              <% result_fut << project %>
            </div>
            <div class="card-footer">
                <div><i class="fas fa-table"></i><%= "#{project.start_date.strftime('%d/%m/%y')} to #{project.end_date.strftime('%d/%m/%y')}" %></div>
                <div><i class="fas fa-user"></i><%= " #{project.participant_number}" %></div>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
      <% if result_fut.empty? %>
        <div class="col-xs-12 col-md-4">
          <div class="card">
            <div class="card-main">
              <%= "Empty" %>
            </div>
            <div class="card-footer"></div>
          </div>
        </div>
      <% end %>
  </div>
  <h4 class='project-cat'>Concluded Projects</h4>
  <div class="row">
    <% result_term = [] %>
    <% @projects.each do |project| %>
      <% if project.end_date < Date.today %>
        <div class="col-xs-12 col-md-4">
          <div class="card">
            <div class="card-main" style="background-image: linear-gradient(rgba(0,0,0,0.1) 50%, rgba(0,0,0,0.1) 50%), url(<%= project.client.logo %>);">
              <h6><%= project.title %></h6>
              <%= link_to "", project_path(project), class: 'card-link' %>
              <% result_term << project %>
            </div>
            <div class="card-footer">
                <div><i class="fas fa-table"></i><%= "#{project.start_date.strftime('%d/%m/%y')} to #{project.end_date.strftime('%d/%m/%y')}" %></div>
                <div><i class="fas fa-user"></i><%= " #{project.participant_number}" %></div>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
      <% if result_term.empty? %>
        <div class="col-xs-12 col-md-4">
          <div class="card">
            <div class="card-main">
              <%= "Empty" %>
            </div>
            <div class="card-footer"></div>
          </div>
        </div>
      <% end %>
  </div>
</div>

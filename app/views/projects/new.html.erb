<div class="container">
  <h1>Add a project</h1>

  <%= simple_form_for @project do |f| %>
    <%= f.input :title %>
    <%= f.association :client, :collection => @clients, :label_method => :name, :label => 'Client', :include_blank => false %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      </div>
      <div class="col-xs-6">
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      </div>
    </div>
    <%= f.input :participant_number, input_html: { min: '0' } %>
    <%= f.submit %>
  <% end %>
</div>
